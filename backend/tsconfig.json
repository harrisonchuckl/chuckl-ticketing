{
  "compilerOptions": {
    // ESM with Node-style resolution (matches your `.js` import paths from TS)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Modern JS features + Node globals (process, Buffer, TextEncoder, etc.)
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    // Quality-of-life
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Sensible strictness for a backend
    "strict": true,
    "noImplicitAny": true,

    // Build layout
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
"exclude": [
  "src/lib/auth.ts",
  "src/middleware/**",
  "src/routes/auth.ts",
  "src/routes/admin-create-show.ts",
  "src/routes/admin-edit-show.ts",
  "src/routes/admin-lookup.ts",
  "src/routes/admin-manage.ts"
]

}
