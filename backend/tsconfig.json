{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    // Exclude unfinished auth for now (prevents role/userVenue errors)
    "src/lib/auth.ts",
    "src/middleware/**",
    "src/routes/auth.ts",
    "src/routes/admin-create-show.ts",
    "src/routes/admin-edit-show.ts",
    "src/routes/admin-lookup.ts",
    "src/routes/admin-manage.ts"
  ]
}
