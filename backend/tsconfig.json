{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "Bundler",  // <- this allows extensionless TS imports
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
