generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//// Enums

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

enum SeatStatus {
  AVAILABLE
  HELD
  SOLD
  BLOCKED
}

//// Models

model User {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  name             String?
  email            String   @unique
  passwordHash     String?
  role             String?
  organiserSplitBps Int?

  // Relations
  orders           Order[]
  showsOrganised   Show[]   @relation("OrganiserShows")
}

model Venue {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  address   String?
  city      String?
  postcode  String?
  capacity  Int?

  // Relations
  shows     Show[]
}

model Show {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String?
  description String?
  imageUrl    String?
  date        DateTime

  // Foreign keys
  venueId     String?
  organiserId String?

  // Relations
  venue       Venue?   @relation(fields: [venueId], references: [id])
  organiser   User?    @relation("OrganiserShows", fields: [organiserId], references: [id])

  ticketTypes TicketType[]
  tickets     Ticket[]
  orders      Order[]

  // Seat mapping
  seatMaps    SeatMap[]
  allocations ExternalAllocation[]
}

model TicketType {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  name       String
  pricePence Int

  showId     String
  show       Show     @relation(fields: [showId], references: [id])

  tickets    Ticket[]
  orders     Order[]
}

model Order {
  id                 String      @id @default(cuid())
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  // Financials used by routes
  amountPence        Int
  platformFeePence   Int?
  organiserSharePence Int?
  paymentFeePence    Int?
  netPayoutPence     Int?

  stripeId           String?
  status             OrderStatus @default(PENDING)

  // Convenience fields used in routes
  email              String?

  // FKs
  showId       String
  userId       String?
  ticketTypeId String?

  // Relations
  show         Show       @relation(fields: [showId], references: [id])
  user         User?      @relation(fields: [userId], references: [id])
  ticketType   TicketType? @relation(fields: [ticketTypeId], references: [id])

  tickets      Ticket[]
  refunds      Refund[]
}

model Refund {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  amountPence Int

  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
}

model Ticket {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  showId      String
  amountPence Int
  quantity    Int      @default(1)

  orderId     String
  ticketTypeId String

  status      String?
  seatId      String?
  serial      String?
  scannedAt   DateTime?
  holderName  String?

  // Relations
  show        Show       @relation(fields: [showId], references: [id])
  order       Order      @relation(fields: [orderId], references: [id])
  ticketType  TicketType @relation(fields: [ticketTypeId], references: [id])
  seat        Seat?      @relation(fields: [seatId], references: [id])
}

//// Seat mapping & allocations

model SeatMap {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String

  showId    String
  show      Show     @relation(fields: [showId], references: [id])

  seats     Seat[]
}

model Seat {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  seatMapId  String
  seatMap    SeatMap   @relation(fields: [seatMapId], references: [id])

  row        String
  number     Int
  status     SeatStatus @default(AVAILABLE)

  // Optional convenience to tie to a show directly
  showId     String?
  show       Show?      @relation(fields: [showId], references: [id])

  // Back references
  tickets    Ticket[]
  allocationSeats AllocationSeat[]
}

model ExternalAllocation {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  showId     String
  show       Show     @relation(fields: [showId], references: [id])

  source     String
  quantity   Int

  seats      AllocationSeat[]
}

model AllocationSeat {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  allocationId       String
  allocation         ExternalAllocation @relation(fields: [allocationId], references: [id])

  seatId             String
  seat               Seat             @relation(fields: [seatId], references: [id])
}
