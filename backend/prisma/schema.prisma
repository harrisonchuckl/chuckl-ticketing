// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue {
  id        Int      @id @default(autoincrement())
  name      String
  capacity  Int?
  address   String?
  city      String?
  postcode  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shows     Show[]
  // NEW: many-to-many to users
  userLinks UserVenue[]
}

model Show {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  startsAt    DateTime
  capacity    Int?
  posterUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  venueId Int
  venue   Venue

  ticketTypes TicketType[]
  orders      Order[]
}

model TicketType {
  id        Int      @id @default(autoincrement())
  name      String
  pricePence Int
  available Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  showId Int
  show   Show

  // Optional: orders referencing this type
  orders Order[]
}

model Order {
  id         Int      @id @default(autoincrement())
  email      String
  name       String?
  totalPence Int
  status     String   // e.g. PAID, REFUNDED
  createdAt  DateTime @default(now())

  showId       Int
  show         Show
  ticketTypeId Int?
  ticketType   TicketType?
}

// ===== NEW AUTH MODELS =====
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String    // bcrypt hash
  role      UserRole  @default(ORGANISER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // venues the user can access
  venues UserVenue[]
}

model UserVenue {
  userId  Int
  venueId Int
  role    VenueRole @default(EDITOR)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue Venue @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@id([userId, venueId])
}

enum UserRole {
  SUPERADMIN   // full access to all venues (your internal team)
  ORGANISER    // regular organiser across assigned venues
}

enum VenueRole {
  VIEWER
  EDITOR
  ADMIN
}
