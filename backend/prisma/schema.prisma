// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  name           String?
  password       String?
  createdAt      DateTime         @default(now())
  orders         Order[]
  tickets        Ticket[]         @relation("UserTickets")
  passwordResets PasswordReset[]
  orderNotes     OrderNote[]
}

model Order {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  email             String?
  amountPence       Int?
  quantity          Int?
  stripeId          String?
  status            OrderStatus   @default(PENDING)
  userId            String?
  user              User?         @relation(fields: [userId], references: [id])
  showId            String?
  show              Show?         @relation(fields: [showId], references: [id])
  tickets           Ticket[]
  refunds           Refund[]
  notes             OrderNote[]

  // Computed at checkout/webhook (filled later)
  platformFeePence  Int?          @default(0) // total fee we keep
  organiserFeePence Int?          @default(0) // fee share paid to organiser
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

model Show {
  id          String       @id @default(cuid())
  title       String
  description String?
  date        DateTime
  venueId     String?
  venue       Venue?       @relation(fields: [venueId], references: [id])
  ticketTypes TicketType[]
  orders      Order[]
}

model Venue {
  id               String   @id @default(cuid())
  name             String
  address          String?
  city             String?
  postcode         String?
  capacity         Int?
  shows            Show[]

  // --- Fee profile (all optional; defaults mean “no fee” if left blank) ---
  feePercentBps        Int?    @default(0)   // e.g. 1000 = 10.00%
  perTicketFeePence    Int?    @default(0)   // fixed per ticket fee
  basketFeePence       Int?    @default(0)   // one-off fee per order
  organiserSplitBps    Int?    @default(5000) // split of total fee that goes to organiser (e.g. 5000 = 50.00%)
}

model TicketType {
  id         String   @id @default(cuid())
  name       String
  pricePence Int
  available  Int?
  createdAt  DateTime @default(now())
  showId     String?
  show       Show?    @relation(fields: [showId], references: [id])
}

model Ticket {
  id          String    @id @default(cuid())
  serial      String    @unique
  holderName  String?
  status      String
  scannedAt   DateTime?
  orderId     String?
  order       Order?    @relation(fields: [orderId], references: [id])
  userId      String?
  user        User?     @relation("UserTickets", fields: [userId], references: [id])

  refunds     Refund[]
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  usedAt    DateTime?
}

model Refund {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  amount     Int
  reason     String?
  stripeId   String?
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  ticketId   String?
  ticket     Ticket?  @relation(fields: [ticketId], references: [id])
  createdBy  String?
}

model OrderNote {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  authorId  String?
  user      User?    @relation(fields: [authorId], references: [id])
  text      String
  createdAt DateTime @default(now())

  @@index([orderId, createdAt])
  @@index([authorId])
}
