// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  name           String?
  password       String?
  createdAt      DateTime         @default(now())
  orders         Order[]
  tickets        Ticket[]         @relation("UserTickets")
  passwordResets PasswordReset[]
}

model Order {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  email       String?
  amountPence Int?
  quantity    Int?          // ✅ Added back for compatibility
  stripeId    String?       // ✅ Added back for Stripe integration
  status      OrderStatus   @default(PENDING)
  userId      String?
  user        User?         @relation(fields: [userId], references: [id])
  showId      String?
  show        Show?         @relation(fields: [showId], references: [id])
  tickets     Ticket[]
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

model Show {
  id          String       @id @default(cuid())
  title       String
  description String?       // ✅ Added back
  date        DateTime
  venueId     String?
  venue       Venue?       @relation(fields: [venueId], references: [id])
  ticketTypes TicketType[]
  orders      Order[]
}

model Venue {
  id        String   @id @default(cuid())
  name      String
  address   String?
  city      String?
  postcode  String?
  capacity  Int?
  shows     Show[]
}

model TicketType {
  id         String   @id @default(cuid())
  name       String
  pricePence Int
  available  Int?      // ✅ Added back
  createdAt  DateTime  @default(now()) // ✅ Added back
  showId     String?
  show       Show?    @relation(fields: [showId], references: [id])
}

model Ticket {
  id          String   @id @default(cuid())
  serial      String   @unique
  holderName  String?
  status      String
  scannedAt   DateTime?   // ✅ Added back for scanning feature
  orderId     String?
  order       Order?   @relation(fields: [orderId], references: [id])
  userId      String?
  user        User?    @relation("UserTickets", fields: [userId], references: [id])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime? // ✅ Added back for token validity
  usedAt    DateTime? // ✅ Added back for tracking used tokens
}
