// Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// Database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//// Enums

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

enum SeatStatus {
  AVAILABLE
  HELD
  SOLD
  BLOCKED
}

//// Models

model User {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  name              String?
  email             String   @unique
  passwordHash      String?
  role              String?
  organiserSplitBps Int?

  // Relations
  orders         Order[]
  showsOrganised Show[] @relation("OrganiserShows")
}

model Venue {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  address   String?
  city      String?
  postcode  String?
  capacity  Int?

  // Relations
  shows     Show[]
  seatMaps  SeatMap[]
}

model Show {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String?
  description String?
  imageUrl    String?
  date        DateTime

  // Foreign keys
  venueId     String?
  organiserId String?

  // Relations
  venue       Venue? @relation(fields: [venueId], references: [id])
  organiser   User?  @relation("OrganiserShows", fields: [organiserId], references: [id])

  ticketTypes TicketType[]
  tickets     Ticket[]
  orders      Order[]

  // Seat mapping and allocations
  seatMaps    SeatMap[]
  allocations ExternalAllocation[]
}

model TicketType {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  pricePence  Int
  available   Boolean  @default(true) // required by routes

  showId      String
  show        Show     @relation(fields: [showId], references: [id])

  tickets     Ticket[]
  orders      Order[]
}

model Order {
  id                  String      @id @default(cuid())
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  // Financials
  amountPence         Int
  platformFeePence    Int?
  organiserSharePence Int?
  paymentFeePence     Int?
  netPayoutPence      Int?

  // Convenience / external references
  stripeId            String?
  status              OrderStatus @default(PENDING)
  email               String?
  quantity            Int?        // some routes select this

  // FKs
  showId       String
  userId       String?
  ticketTypeId String?

  // Relations
  show         Show        @relation(fields: [showId], references: [id])
  user         User?       @relation(fields: [userId], references: [id])
  ticketType   TicketType? @relation(fields: [ticketTypeId], references: [id])

  tickets      Ticket[]
  refunds      Refund[]
}

model Refund {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  // keep both for compatibility with code that queries `amount`
  amount      Int
  amountPence Int?

  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
}

model Ticket {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  showId      String
  amountPence Int
  quantity    Int      @default(1)

  orderId      String
  ticketTypeId String

  status      String?
  seatId      String?
  serial      String?  @unique
  scannedAt   DateTime?
  holderName  String?

  // Relations
  show        Show       @relation(fields: [showId], references: [id])
  order       Order      @relation(fields: [orderId], references: [id])
  ticketType  TicketType @relation(fields: [ticketTypeId], references: [id])
  seat        Seat?      @relation(fields: [seatId], references: [id])
}

//// Seating map

model SeatMap {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  name       String
  version    Int      @default(1)   // routes update this
  showId     String
  venueId    String?                // queried by routes

  show       Show    @relation(fields: [showId], references: [id])
  venue      Venue?  @relation(fields: [venueId], references: [id])

  seats      Seat[]
  zones      Zone[]                 // routes include zones
  allocations ExternalAllocation[]  // some routes include allocations
}

model Zone {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  label     String
  level     String?

  seatMapId String
  seatMap   SeatMap  @relation(fields: [seatMapId], references: [id])

  seats     Seat[]
}

model Seat {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  seatMapId  String
  seatMap    SeatMap   @relation(fields: [seatMapId], references: [id])

  // Fields expected by routes
  row        String
  number     Int
  rowLabel   String?
  seatNumber Int?
  label      String?
  kind       String?
  level      String?

  status     SeatStatus @default(AVAILABLE)

  zoneId     String?
  zone       Zone?      @relation(fields: [zoneId], references: [id])

  // Back references
  tickets         Ticket[]
  allocationSeats AllocationSeat[]
}

//// Third-party allocations

model ExternalAllocation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  showId    String
  show      Show     @relation(fields: [showId], references: [id])

  // optional link to a specific seat map
  seatMapId String?
  seatMap   SeatMap? @relation(fields: [seatMapId], references: [id])

  source    String
  label     String?   // used by routes
  quantity  Int

  seats     AllocationSeat[]
}

model AllocationSeat {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  allocationId  String
  allocation    ExternalAllocation @relation(fields: [allocationId], references: [id])

  seatId        String
  seat          Seat    @relation(fields: [seatId], references: [id])
}
