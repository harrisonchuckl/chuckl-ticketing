generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

enum SeatStatus {
  AVAILABLE
  HELD
  SOLD
  BLOCKED
}

model User {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  name              String?
  email             String   @unique
  passwordHash      String?
  role              String?
  organiserSplitBps Int?

  orders         Order[]
  showsOrganised Show[]  @relation("OrganiserShows")
  tickets        Ticket[] // <-- back-relation for Ticket.user
}

model Venue {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  address   String?
  city      String?
  postcode  String?
  capacity  Int?

  shows     Show[]
  seatMaps  SeatMap[]
}

model Show {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String?
  description String?
  imageUrl    String?
  date        DateTime

  venueId     String?
  organiserId String?

  venue       Venue? @relation(fields: [venueId], references: [id])
  organiser   User?  @relation("OrganiserShows", fields: [organiserId], references: [id])

  ticketTypes TicketType[]
  tickets     Ticket[]
  orders      Order[]
  seatMaps    SeatMap[]
  allocations ExternalAllocation[]
}

model TicketType {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  pricePence  Int
  /// numeric availability expected by routes (they compare `available > 0`)
  available   Int?

  showId      String
  show        Show     @relation(fields: [showId], references: [id])

  tickets     Ticket[]
  orders      Order[]
}

model Order {
  id                  String      @id @default(cuid())
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  amountPence         Int
  platformFeePence    Int?
  organiserSharePence Int?
  paymentFeePence     Int?
  netPayoutPence      Int?

  stripeId            String?
  status              OrderStatus @default(PENDING)
  email               String?
  quantity            Int?

  showId       String
  userId       String?
  ticketTypeId String?

  show         Show        @relation(fields: [showId], references: [id])
  user         User?       @relation(fields: [userId], references: [id])
  ticketType   TicketType? @relation(fields: [ticketTypeId], references: [id])

  tickets      Ticket[]
  refunds      Refund[]
}

model Refund {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  amount      Int
  amountPence Int?
  reason      String?  // routes sometimes set 'reason'

  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
}

model Ticket {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  showId      String
  amountPence Int
  quantity    Int      @default(1)

  orderId      String
  ticketTypeId String

  status      String?
  seatId      String?
  serial      String?  @unique
  scannedAt   DateTime?
  holderName  String?

  show        Show       @relation(fields: [showId], references: [id])
  order       Order      @relation(fields: [orderId], references: [id])
  ticketType  TicketType @relation(fields: [ticketTypeId], references: [id])
  seat        Seat?      @relation(fields: [seatId], references: [id])

  // Optional direct link handy for includes some code expects (TicketInclude.user)
  userId      String?
  user        User?      @relation(fields: [userId], references: [id])
}

model SeatMap {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  name       String
  version    Int       @default(1)
  isDefault  Boolean   @default(false)

  showId     String
  venueId    String?

  show       Show    @relation(fields: [showId], references: [id])
  venue      Venue?  @relation(fields: [venueId], references: [id])

  seats      Seat[]
  zones      Zone[]
  allocations ExternalAllocation[]
}

model Zone {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  label     String
  level     String?

  seatMapId String
  seatMap   SeatMap  @relation(fields: [seatMapId], references: [id])

  seats     Seat[]
}

model Seat {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  seatMapId  String
  seatMap    SeatMap   @relation(fields: [seatMapId], references: [id])

  row        String
  number     Int

  rowLabel   String?
  seatNumber Int?
  label      String?
  kind       String?
  level      String?

  status     SeatStatus @default(AVAILABLE)

  zoneId     String?
  zone       Zone?      @relation(fields: [zoneId], references: [id])

  tickets         Ticket[]
  allocationSeats AllocationSeat[]
}

model ExternalAllocation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  showId    String
  show      Show     @relation(fields: [showId], references: [id])

  seatMapId String?
  seatMap   SeatMap? @relation(fields: [seatMapId], references: [id])

  source    String
  label     String?
  externalPlatform String?
  quantity  Int

  seats     AllocationSeat[]
}

model AllocationSeat {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  allocationId  String
  allocation    ExternalAllocation @relation(fields: [allocationId], references: [id])

  seatId        String
  seat          Seat    @relation(fields: [seatId], references: [id])
}
