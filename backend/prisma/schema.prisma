generator client {
  provider      = "prisma-client-js"
  // Include both engine targets so the client works on Debian 11 (OpenSSL 1.1)
  // and Debian 12 (OpenSSL 3.0) runtimes.
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

enum SeatStatus {
  AVAILABLE
  HELD
  SOLD
  BLOCKED
}

enum ShowStatus {
  DRAFT
  LIVE
}

model User {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  name              String?
  email             String   @unique
  passwordHash      String?
  role              String?
  organiserSplitBps Int?

  orders         Order[]
  showsOrganised Show[]  @relation("OrganiserShows")
  tickets        Ticket[]
}

model Venue {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  address   String?
  city      String?
  postcode  String?
  capacity  Int?

  shows     Show[]
  seatMaps  SeatMap[]
}

model Show {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String?
  description String?
  imageUrl    String?
  date        DateTime
  endDate     DateTime?

  // New optional fields from the Admin “Create Show” flow
  doorsOpenTime    String?
  ageGuidance      String?
  endTimeNote      String?
  eventType        String?
  eventCategory    String?
  accessibility    Json?
  tags             String[] @default([])
  additionalImages String[] @default([])

  status         ShowStatus @default(DRAFT)
  publishedAt    DateTime?
  activeSeatMapId String?

  venueId     String?
  organiserId String?

  venue       Venue? @relation(fields: [venueId], references: [id])
  organiser   User?  @relation("OrganiserShows", fields: [organiserId], references: [id])

  ticketTypes  TicketType[]
  tickets      Ticket[]
  orders       Order[]
  seatMaps     SeatMap[]
  allocations  ExternalAllocation[]
}

model TicketType {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  pricePence  Int

  /// Numeric availability used by routes (e.g. comparisons like > 0)
  available   Int?

  showId      String
  show        Show     @relation(fields: [showId], references: [id])

  tickets     Ticket[]
  orders      Order[]
}

model Order {
  id                  String      @id @default(cuid())
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  amountPence         Int
  platformFeePence    Int?
  organiserSharePence Int?
  paymentFeePence     Int?
  netPayoutPence      Int?

  stripeId            String?
  status              OrderStatus @default(PENDING)
  email               String?

  /// Some routes read a top-level quantity directly on the order
  quantity            Int?

  showId       String
  userId       String?
  ticketTypeId String?

  show         Show        @relation(fields: [showId], references: [id])
  user         User?       @relation(fields: [userId], references: [id])
  ticketType   TicketType? @relation(fields: [ticketTypeId], references: [id])

  tickets      Ticket[]
  refunds      Refund[]
}

model Refund {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  /// Kept for routes that read `amount`
  amount      Int
  /// Some code references `amountPence`; keep both for compatibility
  amountPence Int?
  reason      String?
  /// E.g. Stripe refund id or processor reference
  processorId String?
  /// Some routes refer to this key
  stripeId    String?

  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
}

model Ticket {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  showId      String
  amountPence Int
  quantity    Int      @default(1)

  orderId     String
  ticketTypeId String

  status      String?
  seatId      String?
  serial      String?  @unique
  scannedAt   DateTime?
  holderName  String?

  show        Show       @relation(fields: [showId], references: [id])
  order       Order      @relation(fields: [orderId], references: [id])
  ticketType  TicketType @relation(fields: [ticketTypeId], references: [id])
  seat        Seat?      @relation(fields: [seatId], references: [id])

  userId      String?
  user        User?      @relation(fields: [userId], references: [id])
}

model SeatMap {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  name       String
  version    Int       @default(1)
  isDefault  Boolean   @default(false)

  // NEW FIELDS
  isTemplate       Boolean   @default(false)
  createdByUserId  String?

  layout     Json?

  showId     String
  venueId    String?

  show       Show    @relation(fields: [showId], references: [id])
  venue      Venue?  @relation(fields: [venueId], references: [id])
  seats      Seat[]
  zones      Zone[]
  allocations ExternalAllocation[]
}


model Zone {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  label     String
  level     String?

  seatMapId String
  seatMap   SeatMap  @relation(fields: [seatMapId], references: [id])

  seats     Seat[]
}

model Seat {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  seatMapId  String
  seatMap    SeatMap   @relation(fields: [seatMapId], references: [id])

  /// Basic coordinates
  row        String
  number     Int

  /// Denormalised / optional fields referenced by routes
  rowLabel   String?
  seatNumber Int?
  label      String?
  kind       String?
  level      String?

  status     SeatStatus @default(AVAILABLE)

  zoneId     String?
  zone       Zone?      @relation(fields: [zoneId], references: [id])

  tickets         Ticket[]
  allocationSeats AllocationSeat[]
}

model ExternalAllocation {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  showId     String
  show       Show     @relation(fields: [showId], references: [id])

  seatMapId  String?
  seatMap    SeatMap? @relation(fields: [seatMapId], references: [id])

  source           String
  label            String?
  externalPlatform String?
  contactEmail     String?
  quantity         Int

  seats      AllocationSeat[]
}

model AllocationSeat {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  allocationId  String
  allocation    ExternalAllocation @relation(fields: [allocationId], references: [id])

  seatId        String
  seat          Seat    @relation(fields: [seatId], references: [id])

  /// Denormalised helpers that some routes read directly
  rowLabel      String?
  seatNumber    Int?
  level         String?
}
