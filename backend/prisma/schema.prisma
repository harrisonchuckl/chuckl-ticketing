generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  name           String?
  password       String?
  createdAt      DateTime         @default(now())
  orders         Order[]
  tickets        Ticket[]         @relation("UserTickets")
  passwordResets PasswordReset[]
  orderNotes     OrderNote[]
}

model Order {
  id                              String        @id @default(cuid())
  createdAt                       DateTime      @default(now())
  updatedAt                       DateTime      @updatedAt
  email                           String?
  amountPence                     Int?
  quantity                        Int?
  stripeId                        String?
  status                          OrderStatus   @default(PENDING)
  userId                          String?
  user                            User?         @relation(fields: [userId], references: [id])
  showId                          String?
  show                            Show?         @relation(fields: [showId], references: [id])
  tickets                         Ticket[]
  refunds                         Refund[]
  notes                           OrderNote[]

  // Discounts / coupons
  couponId                        String?
  coupon                          Coupon?       @relation(fields: [couponId], references: [id])
  discountPence                   Int?

  // Fees & payout (overall)
  platformFeePence                Int?
  paymentFeePence                 Int?
  netPayoutPence                  Int?

  // Fee split
  platformFeeOurSharePence        Int?
  platformFeeOrganiserSharePence  Int?

  @@index([showId])
  @@index([couponId])
}

enum OrderStatus {
  PENDING
  PAID
  REFUNDED
  CANCELLED
}

model Show {
  id          String       @id @default(cuid())
  title       String
  description String?
  date        DateTime
  venueId     String?
  venue       Venue?       @relation(fields: [venueId], references: [id])
  ticketTypes TicketType[]
  orders      Order[]

  @@index([venueId])
  @@index([date])
}

model Venue {
  id                 String   @id @default(cuid())
  name               String
  address            String?
  city               String?
  postcode           String?
  capacity           Int?
  shows              Show[]

  // Per-venue fee profile (all optional; fallbacks come from env)
  feePercentBps          Int?   // e.g. 1000 = 10.00%
  perTicketFeePence      Int?   // fixed per ticket
  basketFeePence         Int?   // fixed per order
  organiserShareBps      Int?   // % of fee given to organiser, e.g. 5000 = 50%

  @@index([name])
}

model TicketType {
  id         String   @id @default(cuid())
  name       String
  pricePence Int
  available  Int?
  createdAt  DateTime @default(now())
  showId     String?
  show       Show?    @relation(fields: [showId], references: [id])

  @@index([showId])
}

model Ticket {
  id          String    @id @default(cuid())
  serial      String    @unique
  holderName  String?
  status      String
  scannedAt   DateTime?
  orderId     String?
  order       Order?    @relation(fields: [orderId], references: [id])
  userId      String?
  user        User?     @relation("UserTickets", fields: [userId], references: [id])

  refunds     Refund[]

  @@index([orderId])
  @@index([userId])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  usedAt    DateTime?

  @@index([userId])
}

model Refund {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  amount     Int
  reason     String?
  stripeId   String?
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  ticketId   String?
  ticket     Ticket?  @relation(fields: [ticketId], references: [id])
  createdBy  String?

  @@index([orderId])
  @@index([ticketId])
}

model OrderNote {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  authorId  String?
  user      User?    @relation(fields: [authorId], references: [id])
  text      String
  createdAt DateTime @default(now())

  @@index([orderId, createdAt])
  @@index([authorId])
}

// Coupons / Promo Codes
model Coupon {
  id             String    @id @default(cuid())
  code           String    @unique
  description    String?
  active         Boolean   @default(true)
  percentOff     Int?
  amountOffPence Int?
  maxRedemptions Int?
  timesRedeemed  Int       @default(0)
  startsAt       DateTime?
  endsAt         DateTime?
  createdAt      DateTime  @default(now())

  orders         Order[]

  @@index([active])
  @@index([startsAt, endsAt])
}
